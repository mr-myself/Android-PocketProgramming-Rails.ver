<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dayQuestionsListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_normal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:id="@+id/dayQuestionsListHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/spacing_tiny"
        >
        <TextView
            android:id="@+id/trueOrFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_right"
            android:gravity="center"
            android:textSize="@dimen/font_small"
            android:textColor="@color/md_white_1000"
            android:text="@string/correct"
            />
        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:paddingLeft="@dimen/spacing_small"
            android:textColor="@color/md_black_1000"
            android:gravity="center|left"
            />
    </LinearLayout>
    <ffab0.pocketprogramming.util.WrapTextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/md_blue_grey_900"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:lineSpacingMultiplier="1.4"
        />
    <TextView
        android:id="@+id/toDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_blue_500"
        android:text="@string/reconfirm_question_answer"
        />
</LinearLayout>
